# FitRate Cache Headers for Cloudflare Pages
# Ensures users always get the latest version without clearing cache

# Service Worker - NEVER cache (critical for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Main entry points - Always revalidate
/
  Cache-Control: no-cache

/index.html
  Cache-Control: no-cache

# All HTML pages - Always revalidate
/*.html
  Cache-Control: no-cache

# Web App Manifests - Always fresh
/manifest.json
  Cache-Control: no-cache

/manifest.webmanifest
  Cache-Control: no-cache

# Push notification handler - Keep fresh
/push-handler.js
  Cache-Control: no-cache

# Static assets with content hash - Cache forever (immutable)
# These filenames change when content changes, so they're safe to cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images and icons - Cache for 1 day, revalidate
/*.png
  Cache-Control: public, max-age=86400, stale-while-revalidate=86400

/*.svg
  Cache-Control: public, max-age=86400, stale-while-revalidate=86400

/*.ico
  Cache-Control: public, max-age=86400, stale-while-revalidate=86400

# OG images - Cache for 1 day
/og/*
  Cache-Control: public, max-age=86400
